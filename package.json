{
  "name": "iam",
  "version": "1.0.0",
  "description": "Identity Access Management",
  "main": "index.js",
  "scripts": {
    "start": "ts-node-dev --respawn --transpile-only --exit-child src/app.ts",
    "build": "tsc -p .",
    "typeorm": "typeorm-ts-node-commonjs",
    "migrate": "rm -rf build && yarn build && yarn typeorm migration:generate ./src/migrations/added-user-entity -d ./src/utils/data-source.ts",
    "db:push": "rm -rf build && yarn build && yarn typeorm migration:run -d src/utils/data-source.ts",
    "serve": "tsc-watch --onSuccess \"nodemon dist/index.js\"",
    "test": "test"
  },
  "keywords": [
    "identity",
    "access",
    "authorisation",
    "authorization",
    "users",
    "user"
  ],
  "author": "Charles W Rethman",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "typeorm": "^0.3.20",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "typescript": "^5.4.5"
  }
}
